<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bookingRowLayout2"
        android:layout_margin="2dp"
        android:foreground="?android:attr/selectableItemBackground"
        style="?attr/shapeAppearanceMediumComponent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_row_guest_name_num_guest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Su Su Aye | 2 guests"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_row_booking_ref_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Booking Reference:"
                app:layout_constraintStart_toStartOf="@+id/tv_row_guest_name_num_guest"
                app:layout_constraintTop_toBottomOf="@+id/tv_row_guest_name_num_guest" />

            <TextView
                android:id="@+id/tv_row_booking_ref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="2022-3456"
                android:textColor="@color/design_default_color_secondary"
                app:layout_constraintStart_toEndOf="@+id/tv_row_booking_ref_label"
                app:layout_constraintTop_toTopOf="@+id/tv_row_booking_ref_label" />

            <TextView
                android:id="@+id/tv_row_checkin_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Check In"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/tv_row_booking_ref_label"
                app:layout_constraintTop_toBottomOf="@+id/tv_row_booking_ref_label" />

            <TextView
                android:id="@+id/tv_checkIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dec 19, 2021"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintStart_toStartOf="@+id/tv_row_guest_name_num_guest"
                app:layout_constraintTop_toBottomOf="@+id/tv_row_checkin_label" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check Out"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/tv_row_checkout"
                app:layout_constraintTop_toTopOf="@+id/tv_row_checkin_label" />

            <TextView
                android:id="@+id/tv_row_checkout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:text="Dec 19, 2021"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <TextView
                android:id="@+id/tv_nights_and_rooms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 nights - 2 rooms"
                app:layout_constraintStart_toStartOf="@+id/tv_row_checkout"
                app:layout_constraintTop_toTopOf="@+id/tv_row_booking_ref_label" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>


</LinearLayout>