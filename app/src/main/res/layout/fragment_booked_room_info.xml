<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardElevation="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_room_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Standard Sgl/Dbl"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_sub_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="105000.0 MMK "
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/tv_sub_total_label"
            app:layout_constraintTop_toBottomOf="@+id/tv_sub_total_label" />

        <TextView
            android:id="@+id/tv_extra_bed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N/A"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/tv_extra_bed_label"
            app:layout_constraintTop_toBottomOf="@+id/tv_extra_bed_label" />

        <TextView
            android:id="@+id/tv_rate_plan_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:text="Rate Plan"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/tv_max_occupancy_label"
            app:layout_constraintTop_toTopOf="@+id/tv_max_occupancy_label" />

        <TextView
            android:id="@+id/tv_sub_total_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Sub Total"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/tv_rate_plan"
            app:layout_constraintTop_toBottomOf="@+id/tv_rate_plan" />

        <TextView
            android:id="@+id/tv_extra_bed_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="One Extra Bed Rate"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/tv_max_occupancy"
            app:layout_constraintTop_toBottomOf="@+id/tv_max_occupancy" />

        <TextView
            android:id="@+id/tv_max_occupancy_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Max Occupancy"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/tv_room_type"
            app:layout_constraintTop_toBottomOf="@+id/tv_room_type" />

        <TextView
            android:id="@+id/tv_max_occupancy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/tv_max_occupancy_label"
            app:layout_constraintTop_toBottomOf="@+id/tv_max_occupancy_label" />

        <TextView
            android:id="@+id/tv_rate_plan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Standard Rate"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/tv_rate_plan_label"
            app:layout_constraintTop_toBottomOf="@+id/tv_rate_plan_label" />

        <TableLayout
            android:layout_width="421dp"
            android:layout_height="173dp"
            android:layout_margin="40dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_sub_total">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/purple_200">

                <!--  Table Heading  -->

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center_horizontal"
                    android:padding="10sp"
                    android:text="Date"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="center_horizontal"
                    android:padding="10sp"
                    android:text="Rate per night (Extra bed rate included if any)"
                    android:textSize="14sp"
                    android:textStyle="bold" />
                <!--            -->
            </TableRow>

            <!-- Table Data -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/tableStripe">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center_horizontal"
                    android:padding="10sp"
                    android:text="Jul 21, 2020 "
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="center_horizontal"
                    android:padding="10sp"
                    android:text="35000.0"
                    android:textSize="14sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center_horizontal"
                    android:padding="10sp"
                    android:text="Jul 22, 2020 "
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="center_horizontal"
                    android:padding="10sp"
                    android:text="35000.0"
                    android:textSize="14sp" />
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/tableStripe">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center_horizontal"
                    android:padding="10sp"
                    android:text="Jul 23, 2020 "
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="center_horizontal"
                    android:padding="10sp"
                    android:text="35000.0"
                    android:textSize="14sp" />
            </TableRow>

            <!--  Table Data       -->
        </TableLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>